
<% @choices.each do |choice| %>

  <div class="choice">
    <h1><%= choice.title %></h1>
    <div class="row">
      <div class="5u 12u(small)">
        <section class="box feature">
  				<a href="#" class="image featured"><%= image_tag 'pic01.jpg' %></a>
  				<div class="inner">
  					<header>
  						<h2><%= choice.option_a %></h2>
  					</header>
  				</div>
  			</section>
      </div>
      <div class="2u 12u(small)">
        <h1>OR</h1>
      </div>
      <div class="5u 12u(small)">
        <section class="box feature">
  				<a href="#" class="image featured"><%= image_tag 'pic02.jpg' %></a>
  				<div class="inner">
  					<header>
  						<h2><%= choice.option_b %></h2>
  					</header>
  				</div>
  			</section>
      </div>
    </div>

  </div>
<% end %>
